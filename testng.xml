<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Suite1" verbose="1" parallel="tests" thread-count="2">
    <test name="Chrome" parallel="methods" thread-count="2">
        <parameter name="browser" value="CHROME"></parameter>
        <classes>
            <class name="org.selenium.tests.GuestCheckoutTest"></class>
        </classes>
    </test>

    <test name="Firefox" parallel="methods" thread-count="2">
        <parameter name="browser" value="FIREFOX"></parameter>
        <classes>
            <class name="org.selenium.tests.GuestCheckoutTest"></class>
        </classes>
    </test>
    
</suite>
